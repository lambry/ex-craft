{% extends 'layouts/base' %}

{% block title %}{{ site.blurb }}{% endblock %}

{% block content %}
    <h1 class="title">{{ nav[craft.app.request.segments|first] }}</h1>

    <section class="news">
        {% for item in craft.entries.section('news').all() %}
            <a href="{{ item.url }}" class="news-item">
                {% set image = item.image.one() %}
                <img src="{{ image.getUrl('thumbnail') }}" class="news-item-image" alt="{{ image.title }}" loading="lazy">

                <div class="news-item-content">
                    <h4 class="news-item-title">{{ item.title }}</h4>
                    <p class="news-item-intro">{{ item.heading }}</p>
                    <small class="news-item-more">Read more <img src="{{ alias('@web/assets/icons/right.svg') }}" alt="Email"></small>
                </div>
            </a>
        {% endfor %}
    </section>

{% endblock %}
